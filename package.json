{
    "name": "nebula-launcher",
    "version": "1.0.0",
    "type": "commonjs",
    "description": "Игровой лаунчер Nebula",
    "main": "src/main.js",
    "scripts": {
      "start": "electron .",
      "build": "electron-builder"
    },
    "build": {
      "appId": "com.nebula.launcher",
      "productName": "Nebula",
      "win": { "target": "nsis" },
      "mac": { "target": "dmg" },
      "linux": { "target": "AppImage" }
    },
    "dependencies": {
      "electron": "^25.0.0",
      "electron-updater": "^6.1.1",
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "webtorrent": "^2.0.0",
      "@supabase/supabase-js": "^2.45.4",
      "tailwindcss": "^3.4.1"
    },
    "devDependencies": {
      "electron-builder": "^24.4.0"
    }
  }